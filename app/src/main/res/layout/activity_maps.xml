<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.moni.mapsapp.MapsActivity"
        tools:layout="@layout/activity_maps" />

    <include
        layout="@layout/app_bar_main"/>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:map="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        <ImageButton
            android:id="@+id/button_gps_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_start_navigation"
            android:src="@drawable/ic_room_black_36dp"
            android:background="@drawable/roundcorner"/> -->

        <ImageButton
            android:id="@+id/button_add_companion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_start_navigation"
            android:src="@drawable/ic_person_add_black_36dp"
            android:background="@drawable/roundcorner"/>


        <ImageButton
            android:id="@+id/button_destination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_start_navigation"
            android:layout_centerHorizontal="true"
            android:src="@drawable/ic_flag_black_36dp"
            android:background="@drawable/roundcorner"/>

        <ImageButton
            android:id="@+id/button_travelmode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/button_start_navigation"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_transfer_within_a_station_black_36dp"
            android:background="@drawable/roundcorner"/>


        <Button
            android:id="@+id/button_start_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="@android:color/holo_green_light"
            android:text="@string/text_start_btn"/>

    </RelativeLayout>


</RelativeLayout>

